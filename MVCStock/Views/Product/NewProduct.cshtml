@model MVCStock.Models.Entity.TBLPRODUCT
@{
    ViewBag.Title = "NewProduct";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Product Name</label>
        <input type="text" class="form-control" name="PRODUCTNAME" required="" maxlength="50" />
    </div>
    <div>
        <label>Product Brand</label>
        <input type="text" class="form-control" name="BRAND" required="" maxlength="20"/>
    </div>
    <div>
        <label>Product Category</label>
        @Html.DropDownListFor(m => m.TBLCATEGORy.CATEGORYID,(List<SelectListItem>)ViewBag.vl, new {@class="form-control"})
    </div>
    <div>
        <label>Product Price</label>
        <input type="text" class="form-control" name="PRICE" required=""/>
    </div>
    <div>
        <label>Product Stock</label>
        <input type="text" class="form-control" name="STOCK" required=""/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Add Product</button>
    </div>
</form>

